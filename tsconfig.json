{
  "compilerOptions": {

    "composite": true,
    "target": "es2022",

    "lib": ["es2022", "DOM"],
    "moduleDetection": "force",

    "module": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    /* Base Options: */
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "vitest.config.mts"
  ],
  "exclude": ["node_modules", "build", "dist", "out", ".next", ".vercel"]
}
